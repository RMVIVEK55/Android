<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:paddingTop="30dp"
                android:paddingBottom="30dp"
                android:paddingRight="20dp"
                android:paddingLeft="20dp"
                android:background="@drawable/edit_bg"
                android:layout_height="match_parent">
    <TextView android:layout_width="wrap_content"
              android:id="@+id/tv_alert_version"
              android:text="v.5"
              android:textSize="16sp"
              android:layout_alignParentLeft="true"
              android:textColor="@color/Dark_jungle_green"
              android:layout_height="wrap_content"/>
    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_alrt_dwm_close"
            android:text="Close"
            android:textColor="@color/black"
            android:drawableLeft="@drawable/ic_close"
            android:drawablePadding="10dp"
            android:textSize="16sp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"/>
    <androidx.appcompat.widget.AppCompatImageView
            android:layout_marginTop="50dp"

            android:id="@+id/img_mob"
            android:layout_centerHorizontal="true"
            android:background="@drawable/ic_download"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <TextView
            android:layout_marginTop="10dp"
            android:layout_below="@+id/img_mob"
            android:textColor="@color/Kelly_green"
            android:textAlignment="center"
            android:text="link"
            android:id="@+id/tv_link_apk"
            android:layout_width="match_parent"
              android:layout_height="wrap_content"/>


</RelativeLayout>